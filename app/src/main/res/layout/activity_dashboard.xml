<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg4"
    tools:context="user_interface.DashboardFragment">

    <RelativeLayout
        android:id="@+id/welcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <!-- Welcome Message and User Profile -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash_welbk"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText"
            android:text="@string/dash_pw"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/userName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ppholder"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            tools:ignore="ContentDescription,ImageContrastCheck" />
    </RelativeLayout>

    <!-- Expense Summary Section -->
    <LinearLayout
        android:id="@+id/exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_red_background"
        android:padding="16dp"
        android:layout_below="@+id/welcomeMessage"
        android:layout_marginTop="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/budgetSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash_total"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex_sum"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

    </LinearLayout>

<!--    SearchBar-->
    <!-- res/layout/activity_dashboard.xml -->
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/exp"
        android:padding="8dp">

        <!-- Search Input Field -->
        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/text_box"
            android:drawableTint="#FF0000"
            android:hint="@string/dash_search"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#FF0000"
            tools:ignore="Autofill,TextContrastCheck" />

        <!-- Filter Button -->
        <ImageButton
            android:id="@+id/filter_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_red_background"
            android:scaleType="centerInside"
            android:src="@drawable/filter"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />


    </LinearLayout>





    <!-- Categories Section -->
    <LinearLayout
        android:id="@+id/cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/search_layout"
        android:layout_marginTop="16dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/budget"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_red_background"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/budget"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash_budget"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/expense"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_red_background"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/expense"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash_expense"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/category"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_red_background"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/category"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash_cat"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Expense Cards -->
    <LinearLayout
        android:id="@+id/exp_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cat"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/expense_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dashboard_box"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/dashboard_cover"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/dashboard"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

        </LinearLayout>


        <ImageView
            android:id="@+id/settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/settings"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile"
            android:layout_marginEnd="20dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</RelativeLayout>
