<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    android:padding="16dp"
    tools:context="user_financial_management.Budget_Planning">

    <!-- Back Button -->
    <LinearLayout
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fg_back"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Icon and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/budget"
            android:background="@drawable/rounded_red_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BudP_title"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Budget Amount Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BudP_amt"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/text_box"
        android:padding="8dp"
        android:textColor="@color/red"
        android:textColorHint="@color/red"
        android:layout_marginBottom="16dp"
        android:inputType="numberDecimal"/>

    <!-- Category Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dash_cat"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Category 1 - Travel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">
            <RadioButton
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:text="Travel"
                android:textColor="@color/red"
                android:gravity="center" />
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/travelred"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:background="@drawable/text_box"/>

        </LinearLayout>

        <!-- Category 2 - Food -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="15dp">
            <RadioButton
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:text="Travel"
                android:textColor="@color/red"
                android:gravity="center" />
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/foodred"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:background="@drawable/text_box"/>

        </LinearLayout>

        <!-- Category 3 - Shopping -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="5dp">
            <RadioButton
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:text="Travel"
                android:textColor="@color/red"
                android:gravity="center" />
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/accomodationred"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:background="@drawable/text_box"/>

        </LinearLayout>
    </RadioGroup>

    <!-- Notes Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BudP_notes"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="@string/BudP_notesHint"
        android:padding="8dp"
        android:textColor="@color/red"
        android:textColorHint="@color/red"
        android:gravity="top"
        android:background="@drawable/text_box"
        android:inputType="textMultiLine"/>

    <!-- Add Plan Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/BudP_btn"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/buttons"
        android:layout_marginTop="16dp"/>
</LinearLayout>
